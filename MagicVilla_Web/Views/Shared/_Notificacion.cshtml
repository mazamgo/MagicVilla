
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if(TempData["exitoso"] != null)
{
	<script>

		Swal.fire({
			position: 'top-end',
			icon: 'success',					
			text: '@TempData["exitoso"]',
			showConfirmButton: false,
			timer: 3000,
			imageWidth: 200,
			imageHeight: 200,
		});

	</script>
	
}

@if (TempData["error"] != null)
{
	<script>

		Swal.fire({
			position: 'top-end',
			icon: 'error',
			text: '@TempData["error"]',
			showConfirmButton: false,
			timer: 3000,
			imageWidth: 200,
			imageHeight: 200,
		});

	</script>

}